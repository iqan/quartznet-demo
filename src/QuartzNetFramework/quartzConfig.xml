<?xml version="1.0" encoding="utf-8" ?>
<job-scheduling-data xmlns="http://quartznet.sourceforge.net/JobSchedulingData" version="2.0">
  <schedule>
    <job>
      <name>ExampleJob</name>
      <group>ExampleJobGroup</group>
      <description>My example job</description>
      <job-type>QuartzNetFramework.ExampleJob, QuartzNetFramework</job-type>
      <durable>true</durable>
      <recover>true</recover>
    </job>
    <trigger>
      <simple>
        <name>ExampleTrigger</name>
        <description>Example Trigger</description>
        <job-name>ExampleJob</job-name>
        <job-group>ExampleJobGroup</job-group>
        <start-time>2019-05-01T00:00:00.0Z</start-time>
        <repeat-count>-1</repeat-count>
        <repeat-interval>1000</repeat-interval>
      </simple>
    </trigger>
  </schedule>
</job-scheduling-data>